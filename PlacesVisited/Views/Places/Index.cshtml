<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Places Visited</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous">
  </head>
  <div class="container">
    <body>
      @using PlacesVisited.Models;

      <h1>Places Visited</h1>

      @if (Model.Count == 0)
      {
        <p>There are no places in the list.</p>
      }
      <ul>
        @foreach (Place place in Model)
        {
          <li><a href="/places/@place.Id">@place.CityName</a></li>
        }
      </ul>
      <a href="/places/new">Add a new place</a>
      <br>
      <a href="/">Return to home page</a>
      <br>
      <form action="/places/delete" method="post">
        <button type="submit" name="button">Clear All Places</button>
      </form>
    </body>
  </div>

</html>